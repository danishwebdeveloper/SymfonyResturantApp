        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_lists_index') }}">back to list</a>
    <br>
    <br>
    <a class="btn btn-outline-secondary" href="{{ path('app_lists_edit', {'id': list.id}) }}">edit</a>
