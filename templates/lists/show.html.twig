{% extends 'base.html.twig' %}

{% block title %}Lists{% endblock %}

{% block body %}
    <br>
    <div class="container">
    <h2>Lists</h2>
    <br>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ list.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ list.name }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ list.city }}</td>
