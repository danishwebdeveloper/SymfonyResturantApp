{% extends 'base.html.twig' %}


{% block body %}

    {# Delete Flash Messages #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {# Image Flash Message #}
    {% for message in app.flashes('imagesuccess') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    
    {# flash message for the login #}
    {% for message in app.flashes('usersuccess') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {# Display All dishes #}
    <div class="container">
   
    <h3>Dishes Detail</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Order No: </td>
                <td>Dish Name:</td>
                <td>Dish Category:</td>
                <td>Dish Detail: </td>
                <td>Dish Price: </td>
                <td>Delete </td>
                <td> <a href="{{ path('appdishes.create') }}">Create</a></td>
            </tr>
        </thead>
        <tbody>
            {% for dish in dishes %}
                <tr>
                    <td>{{ dish.id }}</td>
                    <td><a href="{{ path('appdishes.show', {id: dish.id}) }}">{{dish.name}}</a></td>
                    <td>{{ dish.Category }}</td> {# happened because of relation between them #}
                    <td>{{ dish.description }}</td>
                    <td>{{ dish.price}}</td>
                    {# <td>price</td> #}
                    <td><a href="{{ path('appdishes.delete', {id : dish.id}) }}">Delete</a></td>
                    <td>X2</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}
