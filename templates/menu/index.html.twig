{% extends 'base.html.twig' %}


{% block body %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
               {{ message }} 
        </div>
    {% endfor %}
    <section class="playlist-section spad">
		<div class="container-fluid">
			<div class="section-title">
				<h2>All Dishes</h2>
			</div>
			<div class="container">
				<ul class="playlist-filter controls">
					<li class="control" data-filter=".Drinks">Drinks</li>
					<li class="control" data-filter=".Desserts">Desserts</li>
                    <li class="control" data-filter=".Drinks">Drinks</li>
					<li class="control" data-filter=".Desserts">Desserts</li>
					<li class="control" data-filter="all">All Dishes</li>
				</ul>
			</div>                                              
			<div class="clearfix"></div>

			<div class="row playlist-area">
                {% for dishes in alldishes %}
				<div class="mix col-lg-3 col-md-4 col-sm-6 {{ dishes.Category }}">
					<div class="playlist-item">
						<img src="{{ asset('imagesUpload/Brochures/' ~ dishes.image) }}" alt="">
						<h5>{{ dishes.name }} - EUR {{ dishes.price }}</h5>
                        <p> Order No: {{ dishes.id }}</p>
                        <a href="{{ path('order', {id: dishes.id}) }}"> Order Now </a>
					</div>
				</div>
                {% endfor %}
			</div>
		</div>
	</section>

{% endblock %}
